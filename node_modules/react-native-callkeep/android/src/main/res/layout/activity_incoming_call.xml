<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="onClickAnswer"
            type="android.view.View.OnClickListener"
            />

        <variable
            name="onClickReject"
            type="android.view.View.OnClickListener"
            />

        <variable
            name="onClickBtnEndCall"
            type="android.view.View.OnClickListener"
            />

        <variable
            name="onClickSpeaker"
            type="android.view.View.OnClickListener"
            />

        <variable
            name="onClickMute"
            type="android.view.View.OnClickListener"
            />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/v_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_theme"
        >

        <FrameLayout
            android:id="@+id/v_remote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:id="@+id/v_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/auto_dimen_30dp"
            >

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/auto_dimen_20dp"
                android:layout_marginTop="@dimen/auto_dimen_20dp"
                android:text="Cuộc gọi đến"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSize_menu"
                tools:ignore="RelativeOverlap,RtlHardcoded"
                />

            <ImageView
                android:id="@+id/im_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/auto_dimen_20dp"
                tools:ignore="ContentDescription,RtlHardcoded"
                />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/v_local"
            android:layout_width="@dimen/auto_dimen_80dp"
            android:layout_height="@dimen/auto_dimen_120dp"
            android:layout_below="@id/v_top"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/auto_dimen_20dp"
            tools:ignore="RtlHardcoded"
            />

        <LinearLayout
            android:id="@+id/v_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/auto_dimen_200dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSize_22"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/auto_dimen_5dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSize_menu"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/auto_dimen_5dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSize_menu"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/v_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/auto_dimen_50dp"
            >

            <LinearLayout
                android:id="@+id/v_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/auto_dimen_40dp"
                android:paddingLeft="@dimen/auto_dimen_50dp"
                android:paddingRight="@dimen/auto_dimen_50dp"
                >

                <ImageButton
                    android:id="@+id/btn_reject"
                    android:layout_width="@dimen/auto_dimen_60dp"
                    android:layout_height="@dimen/auto_dimen_60dp"
                    android:layout_marginRight="@dimen/auto_dimen_50dp"
                    android:background="@drawable/btn_end_call_selector"
                    android:onClick="@{onClickReject}"
                    tools:ignore="ContentDescription,ObsoleteLayoutParam,RtlHardcoded"
                    />

                <ImageButton
                    android:id="@+id/btn_answer"
                    android:layout_width="@dimen/auto_dimen_60dp"
                    android:layout_height="@dimen/auto_dimen_60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/auto_dimen_50dp"
                    android:background="@drawable/btn_answer_selector"
                    android:onClick="@{onClickAnswer}"
                    tools:ignore="ContentDescription,RtlHardcoded"
                    />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/v_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:visibility="gone"
            />

    </RelativeLayout>
</layout>